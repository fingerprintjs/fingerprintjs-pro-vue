{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "."
  },
  "exclude": [
    "**/dist",
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "src",
    "__tests__"
  ]
}
