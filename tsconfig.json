{
  "compilerOptions": {
    "outDir": "dist/src",
    "module": "es6",
    "moduleResolution": "node",
    "target": "ES6",
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["./packages/shared/src/*"]
    }
  },
  "exclude": [
    "**/dist",
    "node_modules",
    "**/*.test.ts"
  ]
}
